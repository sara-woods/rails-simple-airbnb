<div class="container">
<h1>Add a new flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <%= f.submit "Submit", class: "btn btn-primary"%>
  <% end %>

  <%= link_to "Back", flats_path, class: "btn btn-primary" %>
</div>