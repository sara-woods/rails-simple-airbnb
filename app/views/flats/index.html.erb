<nav class="navbar navbar-light" style="background-color: #e3f2fd;">
  <a class="navbar-brand" href="#">Airbnb</a>

 
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to "Add new flat", new_flat_path, class: "btn btn-primary" %>
      </li>
    </ul>

</nav>  


<div class="container">
  <h1>All our flats (<%= @flats.count %>)</h1>
<div class="card-container">
  <% @flats.each do |flat| %>
    <div class="card shadow-sm bg-white rounded">
      <div class="card-info">
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>  <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
      </div>
      <div class="card-footer">
        <p>More info</p>
      </div>
    </div>
  <% end %>
</div>



  

  

</div>